@model List<Activity2Part1.Models.UserModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
</head>
<body>
    <div>
        @Html.ActionLink("Refresh Page", "/Test")

        <table id="users">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => user.Name)</td>
                    <td>@Html.DisplayFor(modelItem => user.EmailAddress)</td>
                    <td>@Html.DisplayFor(modelItem => user.PhoneNumber)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
